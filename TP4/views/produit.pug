extends layout

block title
	title OnlineShop - Produit

block content
	main
		article
			h1#product-name Produit
			.row
				.col
					img#product-image(alt='product', src='#')
				.col
				section
					h2 Description
					p#product-desc
				section
					h2 Caractéristiques
					ul#product-features
				hr
				form#add-to-cart-form.pull-right
					label(for='product-quantity') Quantité:
					input#product-quantity.form-control(type='number', value='1', min='1')
					button.btn(title='Ajouter au panier', type='submit')
						i.fa.fa-cart-plus
						|   Ajouter
				p
					| 	Prix: 
					strong#product-price
			#dialog.dialog
				| Le produit a été ajouté au panier.
    
block script_extra 
	script(type='text/javascript', src='/js/jquery-3.2.1.min.js')
	script(type='text/javascript', src='/scripts/utils.js')
	script(type='text/javascript', src='/scripts/products.service.js')
	script(type='text/javascript', src='/scripts/shopping-cart.service.js')
	script(type='text/javascript', src='/scripts/shopping-cart.controller.js')
	script(type='text/javascript', src='/scripts/product.controller.js')
