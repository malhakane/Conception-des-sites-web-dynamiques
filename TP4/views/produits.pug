extends layout

block title
	title OnlineShop - Produits

block content
	main
		section.sidebar(aria-label='Filtres')
			section
				h2 Catégories
				#product-categories.btn-group.vertical
					button(data-category='cameras') Appareils photo
					button(data-category='consoles') Consoles
					button(data-category='screens') Écrans
					button(data-category='computers') Ordinateurs
					button(data-category='all') Tous les produits
			section
				h2 Classement
				#product-criteria.btn-group.vertical
					button(data-criteria='price-asc') Prix (bas-haut)
					button(data-criteria='price-dsc') Prix (haut-bas)
					button(data-criteria='alpha-asc') Nom (A-Z)
					button(data-criteria='alpha-dsc') Nom (Z-A)
		article
			span#products-count.right-header 13 produits
			h1 Produits
			#products-list.products
				.loading
		  
block append script_extra
	script(type='text/javascript', src='/js/jquery-3.2.1.min.js')
	script(type='text/javascript', src='/scripts/utils.js')
	script(type='text/javascript', src='/scripts/products.service.js')
	script(type='text/javascript', src='/scripts/shopping-cart.service.js')
	script(type='text/javascript', src='/scripts/shopping-cart.controller.js')
	script(type='text/javascript', src='/scripts/products.controller.js')
	
	
	
	
